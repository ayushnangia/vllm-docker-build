# Dockerfile for SGLang commit 9216b10678a036a1797e19693b0445c889016687
# Date: April 25, 2024 - "Improve Performance When Running with Full Parallel" (PR #394)
#
# Build: docker build -f Dockerfile.9216b10 -t sglang:9216b10 .
# Run:   docker run --gpus all -it sglang:9216b10

FROM nvidia/cuda:12.1.1-devel-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3.10-venv \
    python3-pip \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.10 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/python python /usr/bin/python3.10 1

# Upgrade pip
RUN python3 -m pip install --upgrade pip setuptools wheel

# Install PyTorch (version compatible with April 2024 SGLang)
RUN pip3 install torch==2.2.1 torchvision==0.17.1 --index-url https://download.pytorch.org/whl/cu121

# Clone SGLang at specific commit
WORKDIR /sgl-workspace
RUN git clone https://github.com/sgl-project/sglang.git && \
    cd sglang && \
    git checkout 9216b10678a036a1797e19693b0445c889016687

# Install SGLang dependencies and package
WORKDIR /sgl-workspace/sglang
RUN pip3 install -e "python[all]"

# Write commit hash for verification
RUN echo "9216b10678a036a1797e19693b0445c889016687" > /opt/sglang_commit.txt

# Set entrypoint
WORKDIR /sgl-workspace
CMD ["python3", "-c", "import sglang; print('SGLang loaded successfully from commit 9216b10')"]
